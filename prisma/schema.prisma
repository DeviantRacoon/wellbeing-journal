generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum STATUS {
  ACTIVO
  ELIMINADO
}

model User {
  id           Int          @id @default(autoincrement())
  name         String
  email        String       @unique
  birthDate    DateTime
  password     String
  status       STATUS       @default(ACTIVO)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @default(now())
  dailyEntries    DailyEntry[]
  weeklyDiagnoses WeeklyDiagnosis[]
}

model DailyEntry {
  id            Int      @id @default(autoincrement())
  content       String   @db.Text
  mood          Int
  sleep         Int
  socialBattery Int
  focus         Int
  status        STATUS   @default(ACTIVO)
  user          User     @relation(fields: [userId], references: [id])
  userId        Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now())
}

model WeeklyDiagnosis {
  id            Int      @id @default(autoincrement())
  user          User     @relation(fields: [userId], references: [id])
  userId        Int
  weekStartDate DateTime
  content       Json
  createdAt     DateTime @default(now())

  @@unique([userId, weekStartDate])
}
